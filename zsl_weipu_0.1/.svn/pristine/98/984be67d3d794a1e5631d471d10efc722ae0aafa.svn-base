.item {
    position: relative;
    border-top: solid 1px #fff;
    border-bottom: solid 1px #ddd;
    background: #fcfcfc;
    width: 100%;
    height: 42px;
    padding: 0 15px;
}

.item .l{
    float:left;
    line-height: 40px;
}

.item .r{
    float:right;
    line-height: 40px;
}

.map-container{
    width:100%;
    height: 200px;
    margin-top:20px;
    border-top: solid 1px #ddd;
    border-bottom: solid 1px #ddd;
}

.map-container .map{
  width: 100%;
  height: 100%;
}

.map-text{
    margin-top:10px
}

.map-text .text{
    line-height: 24px;
}