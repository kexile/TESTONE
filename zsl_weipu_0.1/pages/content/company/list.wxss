.list{
    border-top:solid 1px #ccc;
}

.list .item{
    background:#fff;
    padding:8px;
    border-top:solid 1px #fff;
    border-bottom:solid 1px #ccc;
}

.list .item .name{
    font-weight:bold;
    line-height:40px;
}

.load{
    height: 50px;
    text-align: center;
}

.load .icon{ 
    vertical-align: middle;
}

.load .text{
    vertical-align: middle;
    padding-left:5px;
    line-height: 50px;
}